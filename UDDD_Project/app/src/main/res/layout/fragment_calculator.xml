<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F8FA"
    tools:context=".CalculatorFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <include layout="@layout/toolbar"/>
        <com.google.android.material.card.MaterialCardView
            app:strokeColor="@color/white"
            app:cardElevation="15dp"
            app:cardCornerRadius="10dp"
            android:outlineAmbientShadowColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_width="350dp"
            android:layout_height="150dp">
            <ImageView
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/calculator_healthy"
                android:layout_width="140dp"
                android:layout_height="140dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_light"
                android:textSize="16dp"
                android:layout_marginEnd="40dp"
                android:layout_gravity="center_horizontal"
                android:text="Hi, Bao"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="75dp"
                android:layout_marginStart="120dp"
                android:fontFamily="@font/roboto_light"
                android:textSize="16dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="right"
                android:text="Please chose one to know your healthy"
                android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:layout_height="match_parent">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:orientation="horizontal"
                       android:layout_marginTop="30dp"
                       android:layout_marginLeft="30dp"
                       android:layout_height="wrap_content">
                       <androidx.cardview.widget.CardView
                           android:id="@+id/bmi_calculate"
                           app:cardElevation="15dp"
                           app:cardCornerRadius="10dp"
                           android:gravity="left"
                           android:outlineSpotShadowColor="@color/white"
                           android:layout_marginRight="40dp"
                           android:background="@color/white"
                           android:layout_width="150dp"
                           android:layout_height="150dp">
                           <ImageView
                               android:layout_width="90dp"
                               android:layout_gravity="center_horizontal"
                               android:layout_margin="15dp"
                               android:background="@drawable/bmi_icon"
                               android:layout_height="90dp"/>
                           <TextView
                               android:layout_gravity="bottom|center_horizontal"
                               android:layout_marginBottom="10dp"
                               android:layout_width="wrap_content"
                               android:fontFamily="@font/roboto"
                               android:textSize="25dp"
                               android:text="BMI"
                               android:layout_height="wrap_content"/>
                       </androidx.cardview.widget.CardView>
                       <androidx.cardview.widget.CardView
                           android:id="@+id/bmr_calculate"
                           app:cardElevation="15dp"
                           app:cardCornerRadius="10dp"
                           android:gravity="left"
                           android:outlineSpotShadowColor="@color/white"
                           android:layout_marginRight="40dp"
                           android:background="@color/white"
                           android:layout_width="150dp"
                           android:layout_height="150dp">
                           <ImageView
                               android:layout_width="90dp"
                               android:layout_gravity="center_horizontal"
                               android:layout_margin="15dp"
                               android:background="@drawable/bmr_icon"
                               android:layout_height="90dp"/>
                           <TextView
                               android:layout_gravity="bottom|center_horizontal"
                               android:layout_marginBottom="10dp"
                               android:layout_width="wrap_content"
                               android:fontFamily="@font/roboto"
                               android:textSize="25dp"
                               android:text="BMR"
                               android:layout_height="wrap_content"/>
                       </androidx.cardview.widget.CardView>
                   </LinearLayout>
                   <androidx.cardview.widget.CardView
                       android:id="@+id/bdf_calculate"
                       android:layout_marginTop="30dp"
                       app:cardElevation="15dp"
                       app:cardCornerRadius="10dp"
                       android:layout_marginLeft="30dp"
                       android:layout_gravity="center_horizontal"
                       android:outlineSpotShadowColor="@color/white"
                       android:layout_marginRight="40dp"
                       android:background="@color/white"
                       android:layout_width="150dp"
                       android:layout_height="150dp">
                       <ImageView
                           android:layout_width="90dp"
                           android:layout_gravity="center_horizontal"
                           android:layout_margin="15dp"
                           android:background="@drawable/icon_bf"
                           android:layout_height="90dp"/>
                       <TextView
                           android:layout_gravity="bottom|center_horizontal"
                           android:layout_marginBottom="10dp"
                           android:layout_width="wrap_content"
                           android:fontFamily="@font/roboto"
                           android:textSize="25dp"
                           android:text="BODY FAT"
                           android:layout_height="wrap_content"/>
                   </androidx.cardview.widget.CardView>
               </LinearLayout>


           </RelativeLayout>
    </LinearLayout>









</FrameLayout>